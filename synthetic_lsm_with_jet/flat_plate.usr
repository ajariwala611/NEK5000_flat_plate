          integer seed_num

          ! Jet data
          real jet_input(25000)
          integer jet_nsteps
          common /gaussian_jet_data/ jet_input, jet_nsteps

          imatrix = 0
         ! Set blasius velocity profile
          call set_blasius(ub, vb)

          ! Set random number generator
          seed_num = np
          call random_seed(size=seed_num)
